{
  "name": "load-module",
  "author": "Lloyd Brookes <75pound@gmail.com>",
  "version": "3.0.1-0",
  "description": "Node's `require` with a few extra features",
  "repository": "https://github.com/75lb/load-module.git",
  "license": "MIT",
  "keywords": [
    "load",
    "require",
    "module",
    "package"
  ],
  "main": "index.mjs",
  "engines": {
